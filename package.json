{
  "name": "task-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Task application",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n frontend,backend -c cyan,green \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "dev:turbo": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "backend:dev": "turbo dev --filter=backend",
    "frontend:dev": "turbo dev --filter=frontend",
    "backend:build": "turbo build --filter=backend",
    "frontend:build": "turbo build --filter=frontend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.4.2",
    "turbo": "^2.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
